---
const canonicalPath = '/';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>GUDUN</title>
    <meta name="description" content="Industrial manufacturing website." />
    <meta name="robots" content="noindex,nofollow" />
    <link rel="canonical" href={canonicalPath} />
  </head>
  <body style="margin:0; font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial; background:#0b1220; color:#e7eefc;">
    <main style="max-width:880px; margin:0 auto; padding:40px 20px;">
      <h1 style="margin:0 0 12px; font-size:32px;">GUDUN</h1>
      <p style="margin:0 0 18px; opacity:0.8;">
        Redirecting…
      </p>
      <div style="display:flex; gap:12px; flex-wrap:wrap;">
        <a href="/cn/" style="padding:10px 14px; border-radius:12px; border:1px solid rgba(231,238,252,0.12); color:#e7eefc; text-decoration:none;">中文</a>
        <a href="/en/" style="padding:10px 14px; border-radius:12px; border:1px solid rgba(231,238,252,0.12); color:#e7eefc; text-decoration:none;">English</a>
      </div>
    </main>
    <script>
      (() => {
        const lang = (navigator.language || '').toLowerCase();
        const target = lang.startsWith('zh') ? '/cn/' : '/en/';
        if (location.pathname === '/') location.replace(target);
      })();
    </script>
  </body>
</html>

