---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getSiteContent } from '../../../lib/siteContent';

const lang = 'en' as const;
const content = getSiteContent(lang);
const canonicalPath = '/en/certifications/';
const alternates = { cn: '/cn/certifications/', en: '/en/certifications/' };
---

<BaseLayout
  lang={lang}
  title={`${content.siteName} | ${content.nav.certifications}`}
  description="Certificates, test reports, and selected project cases."
  canonicalPath={canonicalPath}
  alternates={alternates}
>
  <section class="section">
    <div class="container">
      <div class="h1">{content.nav.certifications}</div>
      <div class="grid grid-2" style="margin-top:16px;">
        <div class="panel">
          <div class="h2">Certificates</div>
          <div class="muted">Add certificate images or PDFs with type, validity, and reference numbers.</div>
        </div>
        <div class="panel">
          <div class="h2">Test Reports</div>
          <div class="muted">Provide third-party or internal report highlights with download links.</div>
        </div>
      </div>
      <div class="panel" style="margin-top:16px;">
        <div class="h2">Project Cases</div>
        <div class="muted">Describe as industry + scenario + delivery scope, avoiding sensitive details.</div>
      </div>
    </div>
  </section>
</BaseLayout>
