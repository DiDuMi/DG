---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getSiteContent } from '../../lib/siteContent';
import RopeDivider from '../../components/RopeDivider.astro';

const lang = 'en' as const;
const content = getSiteContent(lang);
const canonicalPath = '/en/';
const alternates = { cn: '/cn/', en: '/en/' };
---

<BaseLayout
  lang={lang}
  title={`${content.siteName} | ${content.nav.home}`}
  description={content.home.heroSubtitle}
  canonicalPath={canonicalPath}
  alternates={alternates}
>
  <section class="section section-hero">
    <div class="container">
      <div class="hero-card">
        <div class="kicker">{content.keywords.join(' · ')}</div>
        <div style="margin:12px 0 6px;">
          <RopeDivider thickness={9} maxWidth="520px" muted />
        </div>
        <div class="h1">{content.home.heroTitle}</div>
        <div class="muted lead">{content.home.heroSubtitle}</div>
        <div class="hero-actions">
          <a class="btn btn-accent" href="/en/contact/">{content.cta.contact}</a>
          <a class="btn" href="/en/products/">{content.nav.products}</a>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="grid grid-2">
        {content.home.advantages.map((a) => (
          <div class="panel">
            <div class="h2">{a.title}</div>
            <div class="muted">{a.desc}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="grid grid-2">
        {content.home.productEntrances.map((p) => (
          <a class="panel panel-link" href={p.href}>
            <div class="h2">{p.title}</div>
            <div class="muted">{content.cta.getSpec} →</div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="panel">
        <div class="h2">{content.nav.applications}</div>
        <div class="muted chip-row">
          {content.home.industries.map((x) => (
            <span class="chip">{x}</span>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
