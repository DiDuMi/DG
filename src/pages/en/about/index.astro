---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getSiteContent } from '../../../lib/siteContent';

const lang = 'en' as const;
const content = getSiteContent(lang);
const canonicalPath = '/en/about/';
const alternates = { cn: '/cn/about/', en: '/en/about/' };
---

<BaseLayout
  lang={lang}
  title={`${content.siteName} | ${content.nav.about}`}
  description="Company profile, capabilities, and an overview of manufacturing focus."
  canonicalPath={canonicalPath}
  alternates={alternates}
>
  <section class="section">
    <div class="container">
      <div class="h1">{content.nav.about}</div>
      <div class="grid grid-2" style="margin-top:16px;">
        <div class="panel">
          <div class="h2">Company</div>
          <div class="muted">GUDUN focuses on wire rope slings and piling machine parts for construction and heavy engineering.</div>
        </div>
        <div class="panel">
          <div class="h2">Principles</div>
          <div class="muted">Safety, quality, and traceability. Clear specifications and stable delivery for long-term cooperation.</div>
        </div>
      </div>
      <div class="grid grid-2" style="margin-top:16px;">
        <div class="panel">
          <div class="h2">Capability</div>
          <div class="muted">Space for manufacturing, QC, and warehouse photos with a brief process description.</div>
        </div>
        <div class="panel">
          <div class="h2">Compliance</div>
          <div class="muted">Certificates and test reports are consolidated on the Certifications & Cases page.</div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
