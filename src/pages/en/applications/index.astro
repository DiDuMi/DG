---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getSiteContent } from '../../../lib/siteContent';

const lang = 'en' as const;
const content = getSiteContent(lang);
const canonicalPath = '/en/applications/';
const alternates = { cn: '/cn/applications/', en: '/en/applications/' };
---

<BaseLayout
  lang={lang}
  title={`${content.siteName} | ${content.nav.applications}`}
  description="Applications and field-oriented use cases across industries."
  canonicalPath={canonicalPath}
  alternates={alternates}
>
  <section class="section">
    <div class="container">
      <div class="h1">{content.nav.applications}</div>
      <div class="grid grid-3" style="margin-top:16px;">
        <div class="panel">
          <div class="h2">Piling Foundations</div>
          <div class="muted">Fitment, service life for wear parts, and on-site maintainability.</div>
        </div>
        <div class="panel">
          <div class="h2">Lifting & Rigging</div>
          <div class="muted">Load rating, end fittings, and safety factors.</div>
        </div>
        <div class="panel">
          <div class="h2">Heavy Construction</div>
          <div class="muted">Reliability, stable delivery, and efficient technical communication.</div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
