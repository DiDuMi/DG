---
import type { Language } from '../lib/i18n';
import { getSiteContent } from '../lib/siteContent';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

type Props = {
  lang: Language;
  title: string;
  description: string;
  canonicalPath: string;
  alternates: { cn: string; en: string };
  noindex?: boolean;
};

const { lang, title, description, canonicalPath, alternates, noindex } = Astro.props;
const content = getSiteContent(lang);
---

<!doctype html>
<html lang={lang === 'cn' ? 'zh-CN' : 'en'}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={`${Astro.site?.toString().replace(/\/$/, '') || ''}${canonicalPath}`} />
    <link rel="alternate" href={`${Astro.site?.toString().replace(/\/$/, '') || ''}${alternates.cn}`} hreflang="zh-CN" />
    <link rel="alternate" href={`${Astro.site?.toString().replace(/\/$/, '') || ''}${alternates.en}`} hreflang="en" />
    <link rel="alternate" href={`${Astro.site?.toString().replace(/\/$/, '') || ''}${canonicalPath}`} hreflang="x-default" />
    {noindex ? <meta name="robots" content="noindex,nofollow" /> : null}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${Astro.site?.toString().replace(/\/$/, '') || ''}${canonicalPath}`} />
    <meta property="og:site_name" content="GUDUN" />
    <meta name="twitter:card" content="summary" />
  </head>
  <body>
    <Header lang={lang} content={content} hrefCn={alternates.cn} hrefEn={alternates.en} />
    <main>
      <slot />
    </main>
    <Footer lang={lang} content={content} />
  </body>
</html>
